{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://houseofconsequences.org/schemas/audit.report.schema.json",
  "title": "Audit Report Schema (Canonical v1.1)",
  "description": "Legally admissible audit trail report schema with cryptographic integrity, evidentiary metadata, QES signature support, and full integration with HoC audit.log.storage.schema.json + audit.log.schema.json v1.1. Supports GOVERNANCE_MODEL.md §5 requirements.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "report_id",
    "generated_at",
    "report_type",
    "subject",
    "jurisdiction",
    "legal_basis",
    "evidence_scope",
    "evidence_summary",
    "audit_log_snapshot",
    "integrity",
    "signatures",
    "legal_status"
  ],
  "properties": {
    "report_id": {
      "type": "string",
      "format": "uuid",
      "description": "Globally unique identifier for the audit report (RFC4122)."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of report generation (trusted clock)."
    },
    "report_type": {
      "type": "string",
      "enum": [
        "compliance_report",
        "forensic_report", 
        "regulatory_submission",
        "judicial_evidence",
        "internal_review",
        "dao_governance_report"
      ],
      "description": "Classification of report purpose."
    },
    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["entity_id", "entity_type", "description"],
      "properties": {
        "entity_id": { 
          "type": "string",
          "description": "Unique identifier of audited entity."
        },
        "entity_type": {
          "type": "string",
          "enum": [
            "system", 
            "organization", 
            "decision", 
            "case", 
            "user", 
            "process",
            "governance_rfc",
            "dao_proposal"
          ]
        },
        "description": { 
          "type": "string",
          "maxLength": 500 
        }
      }
    },
    "jurisdiction": {
      "type": "string",
      "pattern": "^[A-Z]{2}$",
      "description": "ISO 3166-1 alpha-2 jurisdiction code (e.g., FI)."
    },
    "legal_basis": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "GDPR",
          "eIDAS", 
          "NIS2",
          "ISO27001",
          "ISO27701",
          "AdministrativeProcedureAct",
          "ConstitutionalLaw", 
          "CriminalProcedureAct",
          "FreedomOfInformationAct",
          "AGPLv3",
          "GOVERNANCE_MODEL_v1.0"
        ]
      }
    },
    "evidence_scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_time", "end_time", "included_event_types"],
      "properties": {
        "start_time": { 
          "type": "string", 
          "format": "date-time" 
        },
        "end_time": { 
          "type": "string", 
          "format": "date-time" 
        },
        "included_event_types": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { 
            "type": "string",
            "enum": [
              "decision_created", 
              "evidence_added", 
              "risk_assessed",
              "approval_granted",
              "red_line_violation",
              "rfc_proposed",
              "dao_vote",
              "schema_validation"
            ]
          }
        },
        "excluded_event_types": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "evidence_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_events",
        "first_event_at",
        "last_event_at", 
        "anomalies_detected",
        "red_line_violations",
        "tamper_indicators"
      ],
      "properties": {
        "total_events": { 
          "type": "integer", 
          "minimum": 0 
        },
        "first_event_at": { 
          "type": "string", 
          "format": "date-time" 
        },
        "last_event_at": { 
          "type": "string", 
          "format": "date-time" 
        },
        "anomalies_detected": { 
          "type": "boolean" 
        },
        "red_line_violations": {
          "type": "integer",
          "minimum": 0
        },
        "tamper_indicators": {
          "type": "array",
          "items": { 
            "type": "string",
            "enum": [
              "chain_broken",
              "hash_mismatch", 
              "signature_invalid",
              "schema_violation",
              "timestamp_anomaly"
            ]
          }
        }
      }
    },
    "audit_log_snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "storage_id", 
        "snapshot_at", 
        "chain_hash", 
        "merkle_root",
        "hash_algorithm",
        "entry_count",
        "entries"
      ],
      "properties": {
        "storage_id": { 
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+-[a-z]{2}-\\d{4}-\\d{2}$"
        },
        "snapshot_at": { 
          "type": "string", 
          "format": "date-time" 
        },
        "chain_hash": { 
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$"
        },
        "merkle_root": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$"
        },
        "hash_algorithm": {
          "type": "string",
          "const": "SHA-256"
        },
        "entry_count": {
          "type": "integer",
          "minimum": 1
        },
        "entries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "https://houseofconsequences.org/schemas/audit.log.schema.json"
          }
        }
      }
    },
    "integrity": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "report_hash",
        "hash_algorithm", 
        "hash_scope",
        "merkle_proof"
      ],
      "properties": {
        "report_hash": { 
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$"
        },
        "hash_algorithm": {
          "type": "string",
          "const": "SHA-256"
        },
        "hash_scope": {
          "type": "string",
          "enum": ["full_document", "content_only", "metadata_only"]
        },
        "merkle_proof": {
          "type": "array",
          "items": { 
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$"
          }
        }
      }
    },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "signer_id",
          "signer_role",
          "signature_type",
          "signature_algorithm",
          "signed_at",
          "signature_value",
          "certificate_fingerprint"
        ],
        "properties": {
          "signer_id": { "type": "string" },
          "signer_role": {
            "type": "string",
            "enum": [
              "system", 
              "auditor", 
              "legal_officer", 
              "judge", 
              "notary", 
              "authority",
              "dao_multisig"
            ]
          },
          "signature_type": {
            "type": "string",
            "enum": ["QES", "AdES", "AES", "PAdES", "XAdES", "CAdES"]
          },
          "signature_algorithm": {
            "type": "string",
            "enum": ["RSA-PSS-SHA256", "ECDSA-P256-SHA256", "Ed25519"]
          },
          "signed_at": { 
            "type": "string", 
            "format": "date-time" 
          },
          "signature_value": { "type": "string" },
          "certificate_fingerprint": { 
            "type": "string",
            "pattern": "^[A-F0-9:]{59}$"
          },
          "trust_provider": { 
            "type": "string",
            "description": "EU Trusted List CA, Suomi.fi, etc."
          },
          "legal_effect": {
            "type": "string",
            "enum": ["non_repudiation", "legal_binding", "judicial_admissibility"]
          }
        }
      }
    },
    "legal_status": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "evidentiary_class", 
        "court_admissible", 
        "compliance_frameworks",
        "governance_compliant"
      ],
      "properties": {
        "evidentiary_class": {
          "type": "string",
          "enum": ["administrative", "regulatory", "judicial", "forensic"]
        },
        "court_admissible": { 
          "type": "boolean" 
        },
        "compliance_frameworks": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["GDPR", "eIDAS", "NIS2", "ISO27001", "ISO27701", "AGPLv3"]
          }
        },
        "governance_compliant": {
          "type": "boolean",
          "description": "GOVERNANCE_MODEL.md §1.2 Red Lines compliance."
        }
      }
    }
  },
  "examples": [
    {
      "report_id": "018f9d9b-3d7e-7b6a-bb9e-4fae2b6c9e11",
      "generated_at": "2026-01-19T09:55:00Z",
      "report_type": "judicial_evidence",
      "subject": {
